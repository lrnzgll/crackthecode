<%= render(NavbarComponent.new) %>

<div class='h-screen flex items-center justify-center'>
  <%= render(CardComponent.new) do %>
    <div class='flex justify-between flex-row-reverse'>
      <%= link_to "<< Back", root_path %>
    </div>

    <h2 class='text-xl pt-2 pb-5'>New Game</h2>

    <div class='py-3'>
      <%= form_with model: Game.new, url: games_path do |f| %>
        <%= f.submit "Create new Game", class: 'my-2 p-3 bg-green-300 hover:bg-green-400 active:bg-green-500 font-bold'%>
      <% end %>
    </div>
  <% end %>
</div>
